<acrn-config>
  <hv>
    <BUILD_TYPE>debug</BUILD_TYPE>
    <DEBUG_OPTIONS>
      <SERIAL_CONSOLE>/dev/ttyS0</SERIAL_CONSOLE>
      <MEM_LOGLEVEL>5</MEM_LOGLEVEL>
      <NPK_LOGLEVEL>5</NPK_LOGLEVEL>
      <CONSOLE_LOGLEVEL>5</CONSOLE_LOGLEVEL>
    </DEBUG_OPTIONS>
    <FEATURES>
      <RELOC_ENABLED>n</RELOC_ENABLED>
      <SCHEDULER>SCHED_NOOP</SCHEDULER>
      <MULTIBOOT2_ENABLED>n</MULTIBOOT2_ENABLED>
      <UC_LOCK_DETECTION_ENABLED>n</UC_LOCK_DETECTION_ENABLED>
      <HYPERV_ENABLED>n</HYPERV_ENABLED>
      <IOMMU_ENFORCE_SNP>n</IOMMU_ENFORCE_SNP>
      <IVSHMEM/>
    </FEATURES>
    <MEMORY>
      <STACK_SIZE>0x2000</STACK_SIZE>
      <HV_RAM_START>0x80000000</HV_RAM_START>
    </MEMORY>
    <GIC>
      <GICD_BASE>0x8000000</GICD_BASE>
      <GICD_SIZE>0x10000</GICD_SIZE>
      <GICC_BASE>0x8010000</GICC_BASE>
      <GICR_BASE>0x80a0000</GICR_BASE>
      <GICR_NUM>0x8</GICR_NUM>
      <MAIN_IRQ>0x19</MAIN_IRQ>
      <GIC_REVISION>3</GIC_REVISION>
    </GIC>
    <CAPACITIES>
      <MAX_VM_NUM>2</MAX_VM_NUM>
      <MAX_PCI_DEV_NUM>32</MAX_PCI_DEV_NUM>
      <MAX_PT_IRQ_ENTRIES>256</MAX_PT_IRQ_ENTRIES>
      <MAX_EMULATED_MMIO>128</MAX_EMULATED_MMIO>
    </CAPACITIES>
  </hv>
  <vm id="0">
    <load_order>PRE_LAUNCHED_VM</load_order>
    <vm_type>STANDARD_VM</vm_type>
    <name>PRE_STD_VM0</name>
    <cpu_affinity>
      <pcpu>
        <pcpu_id>0</pcpu_id>
      </pcpu>
      <pcpu>
        <pcpu_id>4</pcpu_id>
      </pcpu>
    </cpu_affinity>
    <memory>
      <hpa_region>
        <start_hpa>0x90000000</start_hpa>
        <size_hpa>512</size_hpa>
      </hpa_region>
    </memory>
    <os_config>
      <kern_type>KERNEL_BZIMAGE</kern_type>
      <kern_mod>Linux_bzImage</kern_mod>
      <ramdisk_mod>Ubuntu</ramdisk_mod>
      <bootargs> loglevel=1 </bootargs>
      <kern_entry_addr>0x90000000</kern_entry_addr>
      <kern_size>0x04000000</kern_size>
      <kern_dtb_addr>0x94000000</kern_dtb_addr>
    </os_config>
    <console_vuart>COM Port 5</console_vuart>
  </vm>
</acrn-config>
